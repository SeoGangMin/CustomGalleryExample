<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/thumbnail"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/cell_spacing"
        android:background="#DDDDDD"
        />

    <ImageView
        android:layout_width="@dimen/ic_video_play"
        android:layout_height="@dimen/ic_video_play"
        android:src="@drawable/ic_video_play"
        android:id="@+id/ic_video_play"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ic_checked"
        android:src="@drawable/ic_check_disabled"
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>